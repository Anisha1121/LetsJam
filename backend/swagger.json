{
  "openapi": "3.0.0",
  "info": {
    "title": "LetsJam API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/auth/register": { "post": { "summary": "Register user", "requestBody": { "required": true } } },
    "/api/auth/login": { "post": { "summary": "Login user", "requestBody": { "required": true } } },
