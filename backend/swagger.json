    "/api/v1/playlists": { "get": { "summary": "List playlists" }, "post": { "summary": "Create playlist" } },
    "/api/v1/playlists/{id}": { "get": { "summary": "Get playlist by ID" }, "put": { "summary": "Update playlist" } },
